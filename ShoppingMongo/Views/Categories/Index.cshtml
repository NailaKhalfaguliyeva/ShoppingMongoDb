@model AdminPanelViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<h4 class="page-title">Category Transactions</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Category List</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    You can perform category transactions below.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Category</th>
                            <th scope="col">ImageUrl</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.CategoryName</td>
                                <td>@item.ImageUrl</td>
                                <td><a href="/Categories/Delete/@item.CategoryId" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Categories/Update/@item.CategoryId" class="btn btn-warning">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Categories/Create" class="btn btn-info">Add New Category</a>
            </div>
        </div>
    </div>
</div>
