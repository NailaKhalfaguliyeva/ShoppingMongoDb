@model ShoppingMongo.DTOS.CategoryDtos.CreateCategoryDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4 class="page-title">Category Transactions</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Add New Category</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                    </div>
                    <div class="form-group">
                        <label>ImageUrl</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="card-action">
                    <button class="btn btn-success">Add Category</button>
                </div>
            </form>
        </div>
 
    
    </div>
</div>