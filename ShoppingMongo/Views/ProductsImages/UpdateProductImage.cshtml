@model ShoppingMongo.DTOS.ProductImageDtos.GetProductImageDto
@{
    ViewData["Title"] = "UpdateProductImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Product Official Procedures</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Update Product Image</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="ProductImageId" />
                    <div class="form-group">
                        <label>Product</label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.v">
                            <option value="">-- Select Product --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Image Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="card-action">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>