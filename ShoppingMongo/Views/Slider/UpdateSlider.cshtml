@using ShoppingMongo.DTOS
@using ShoppingMongo.DTOS.SliderDtos
@model GetSliderDto
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Slider Operations</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Update Slider</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="SliderId" />
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" asp-for="SliderTitle">
                    </div>
                    <div class="form-group">
                        <label>Subtitle</label>
                        <input type="text" class="form-control" asp-for="SliderSubtitle">
                    </div>
                    <div class="form-group">
                        <label>ImageUrl</label>
                        <input type="text" class="form-control" asp-for="SliderImageUrl">
                    </div>
                </div>
                <div class="card-action">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>