@using ShoppingMongo.DTOS
@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Slider Operations</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Slider List</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    You can perform slider operations below.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Subtitle</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           
                            <tr>
                                
                                <td>@item.SliderTitle</td>
                                <td>@item.SliderSubtitle</td>
                                <td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-warning">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Slider/CreateSlider" class="btn btn-info">Add New Slider</a>
            </div>
        </div>
    </div>
</div>