@model List<ShoppingMongo.DTOS.ProductDtos.GetProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="page-title">Product Transactions</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Product List</div>
            </div>
            <div class="card-body">
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product</th>
                            <th>Category ID</th>
                            <th>Price</th>
                            <th>ImageUrl</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.CategoryId</td>
                                <td>@item.Price</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.Name" style="width:80px; height:60px;" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
